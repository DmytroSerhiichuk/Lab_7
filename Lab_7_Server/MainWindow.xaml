<Window x:Class="Lab_7_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_7_Server"
        mc:Ignorable="d"
        Title="Instance" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem x:Name="Switcher" Header="Start" 
                      Height="20" Click="OnClicked" 
                      BorderThickness="0 1 1 0" BorderBrush="#FFABADB3"/>
        </Menu>
        
        <TextBox x:Name="MyTextBox" IsReadOnly="True" FontFamily="Consolas" Grid.Row="1"/>
    </Grid>
</Window>
