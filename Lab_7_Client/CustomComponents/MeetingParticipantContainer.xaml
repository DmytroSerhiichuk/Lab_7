<UserControl x:Class="Lab_7_Client.CustomComponents.MeetingParticipantContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_7_Client.CustomComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="MainBorder" BorderBrush="#FFABADB3" BorderThickness="1" Margin="10" Padding="3">
        <!--BorderBrush="#FF0F42DA"--> 
        <Grid>
            <Border Panel.ZIndex="-1">
                <Image x:Name="ClientCamera" Stretch="UniformToFill"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <TextBlock x:Name="ClientName" Foreground="White" Margin="0 0 0 10" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Background="#aaa8" Padding="10 0 10 0"/>
        </Grid>
    </Border>
</UserControl>
