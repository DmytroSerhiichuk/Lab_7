<UserControl x:Class="Lab_7_Client.CustomComponents.ChatFileDownloadItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_7_Client.CustomComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label x:Name="MessageLabel"/>
        <StackPanel Margin="10 0 0 0" Orientation="Horizontal">
            <Label x:Name="FileInfo"/>
            <Button x:Name="FileBtn" Content="Download" Click="OnBtnClicked"/>
        </StackPanel>   
    </StackPanel>
</UserControl>
